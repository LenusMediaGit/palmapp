<?xml version='1.0' encoding='utf-8'?>
<widget id="app.palmapp.com" version="1.18.0" versionCode="18" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <gap:config-file parent="CFBundleShortVersionString" platform="ios">
        <string>18</string>
    </gap:config-file>
    <name>PalmApp</name>
    <description>
        Palmapp
    </description>
    <author email="info@lenus.it" href="http://www.lenus.it">
        Lenus media
    </author>       
    <gap:plugin name="cordova-plugin-battery-status"  source="npm" />
    <gap:plugin name="cordova-plugin-camera"  source="npm" />
    <gap:plugin name="cordova-plugin-media-capture"  source="npm" />
    <gap:plugin name="cordova-plugin-console"  source="npm" />
    <gap:plugin name="cordova-plugin-contacts"  source="npm" />
    <gap:plugin name="cordova-plugin-device"  source="npm" />
    <gap:plugin name="cordova-plugin-device-motion"  source="npm" />
    <gap:plugin name="cordova-plugin-device-orientation"  source="npm" />
    <gap:plugin name="cordova-plugin-dialogs"  source="npm" />
    <gap:plugin name="cordova-plugin-file"  source="npm" />
    <gap:plugin name="cordova-plugin-file-transfer"  source="npm" />
    <gap:plugin name="cordova-plugin-geolocation"  source="npm" />
    <gap:plugin name="cordova-plugin-globalization"  source="npm" />
    <gap:plugin name="cordova-plugin-inappbrowser"  source="npm" />
    <gap:plugin name="cordova-plugin-media"  source="npm" />
    <gap:plugin name="cordova-plugin-network-information"  source="npm" />
    <gap:plugin name="cordova-plugin-splashscreen"  source="npm" />
    <gap:plugin name="cordova-plugin-vibration"  source="npm" />
    <!---->
    <gap:plugin name="cordova-plugin-camera" source="npm" />
    <gap:plugin name="cordova-plugin-uniquedeviceid" source="npm" />
    <gap:plugin name="cordova-plugin-statusbar" source="npm" />
    <gap:plugin name="phonegap-plugin-push" source="npm" spec="~1.5.0">
        <param name="SENDER_ID" value="240674659233" />
    </gap:plugin>
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>

    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/icon/android/icon.png" />
        <icon src="res/icon/android/icon-36-ldpi.png"   gap:qualifier="ldpi" />
        <icon src="res/icon/android/icon-48-mdpi.png"   gap:qualifier="mdpi" />
        <icon src="res/icon/android/icon-72-hdpi.png"   gap:qualifier="hdpi" />
        <icon src="res/icon/android/icon-96-xhdpi.png"  gap:qualifier="xhdpi" />
        <splash src="res/screen/android/screen-ldpi-portrait.png"  gap:qualifier="port-ldpi" />
        <splash src="res/screen/android/screen-mdpi-portrait.png"  gap:qualifier="port-mdpi" />
        <splash src="res/screen/android/screen-hdpi-portrait.png"  gap:qualifier="port-hdpi" />
        <splash src="res/screen/android/screen-xhdpi-portrait.png" gap:qualifier="port-xhdpi" />
        <preference name="android-minSdkVersion" value="14" />
        <preference name="android-installLocation" value="auto" />
        <preference name="android-build-tool" value="gradle" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="res/icon/ios/icon.png" />
        <icon src="res/icon/ios/icon-57.png"            width="57" height="57" />
        <icon src="res/icon/ios/icon-72.png"            width="72" height="72" />
        <icon src="res/icon/ios/icon-57-2x.png"         width="114" height="114" />
        <icon src="res/icon/ios/icon-72-2x.png"         width="144" height="144" />
        <splash src="res/screen/ios/screen-iphone-portrait.png" width="320" height="480" />
        <splash src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="960" />
        <splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />
        <splash src="res/screen/ios/screen-ipad-portrait.png" width="768" height="1024" />
        <splash src="res/screen/ios/screen-ipad-landscape.png" width="1024" height="768" />
        <preference name="detect-data-types" value="true" />
        <preference name="exit-on-suspend" value="false" />
        <preference name="ios-statusbarstyle" value="black-opaque" />
        <preference name="prerendered-icon" value="true" />
        <preference name="stay-in-webview"            value="false" />          <!-- ios: external links should open in the default browser, 'true' would use the webview the app lives in -->
        <preference name="target-device" value="handset" />
        <preference name="auto-hide-splash-screen"    value="true" />           <!-- ios: if set to false, the splash screen must be hidden using a JavaScript API -->
        <preference name="show-splash-screen-spinner" value="false" />           <!-- ios: if set to false, the spinner won't appear on the splash screen during app loading -->
        <preference name="webviewbounce"              value="false" />           <!-- ios: control whether the screen 'bounces' when scrolled beyond the top -->
        <preference name="DisallowOverscroll" value="true" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="winphone">
    </platform>   
    
    <content src="index.html" />
    <gap:icon src="icon.png" />
    <preference name="orientation"                value="portrait" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="fullscreen"                 value="true" />           <!-- all: hides the status bar at the top of the screen -->
    <preference name="StatusBarOverlaysWebView" value="false" />
</widget>
