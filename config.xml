<?xml version='1.0' encoding='utf-8'?>
<widget id="app.palmapp.com" version="1.17.0" versionCode="17" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PalmApp</name>
    <description>
        Palmapp
    </description>
    <author email="info@lenus.it" href="http://www.lenus.it">
        Lenus media
    </author>
    <gap:icon src="icon.png" />
    <content src="src/main.html" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="SplashScreen" value="splash.png" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="ShowSplashScreen" value="false" />
    <preference name="phonegap-version" value="cli-6.1.0" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-build-tool" value="gradle" />
    <plugin name="cordova-plugin-console" source="npm" />
    <plugin name="cordova-plugin-vibration" source="npm" />
    <plugin name="cordova-plugin-device" source="npm" />
    <plugin name="cordova-plugin-device-motion" source="npm" />
    <plugin name="cordova-plugin-device-orientation" source="npm" />
    <plugin name="cordova-plugin-dialogs" source="npm" />
    <plugin name="cordova-plugin-globalization" source="npm" />
    <plugin name="cordova-plugin-media" source="npm" />
    <plugin name="cordova-plugin-network-information" source="npm" />
    <plugin name="cordova-plugin-camera" source="npm" />
    <plugin name="cordova-plugin-uniquedeviceid" source="npm" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-statusbar" source="npm" />
    <plugin name="cordova-plugin-legacy-whitelist" source="npm" version="1.1.0" />
    <plugin name="phonegap-plugin-push" source="npm" spec="~1.5.0">
        <param name="SENDER_ID" value="240674659233" />
    </plugin>
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="market:*" />
        <icon src="res/icon/android/icon.png" />
        <splash src="res/splash/android/splash.png" width="320" height="480"  />
    </platform>
    <platform name="ios">
        <preference name="DisallowOverscroll" value="true" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/icon/ios/icon.png" />
        <icon height="152" src="res/icon/ios/icon-76-2x.png" width="152" />
        <icon height="120" src="res/icon/ios/icon-60-2x.png" width="120" />
        <icon height="114" src="res/icon/ios/icon-2x.png" width="114" />
        <icon height="76" src="res/icon/ios/icon-76.png" width="76" />
        <icon height="72" src="res/icon/ios/icon-72.png" width="72" />
        <icon height="60" src="res/icon/ios/icon-60.png" width="60" />
        <icon height="50" src="res/icon/ios/icon-50.png" width="50" />
        <splash src="res/screen/ios/screen-iphone-potrait.png" width="320" height="480"/>
        <splash src="res/screen/ios/screen-iphone-potrait-2x.png" width="640" height="960"/>
        <splash src="res/screen/ios/screen-iphone-potrait-568h-2x.png" width="640" height="1136"/>
        <splash src="res/screen/ios/screen-iphone-potrait-667h.png" width="750" height="1334"/>
        <splash src="res/screen/ios/screen-iphone-potrait-736h.png" width="1242" height="2208"/>
        <splash src="res/screen/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
    <platform name="winphone">
        <icon src="res/icon/generic/icon.png" />
        <splash src="res/splash/generic/splash.png" width="320" height="480"  />
    </platform>
    <engine name="android" spec="~4.1.1" />
</widget>
